<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08AD7F"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="136dp"
        android:background="@color/white"
        android:hint="Email"
        android:paddingHorizontal="16dp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/edit_email"
        android:layout_marginVertical="16dp"
        android:background="@color/white"
        android:hint="Password"
        android:paddingHorizontal="16dp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_password"
        android:backgroundTint="#DADADA"
        android:text="LOGIN"
        android:textColor="#08AD7F"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Ainda não é cadastrado? Cadastre-se!"
        android:textColor="@color/white" />


    <ImageView
        android:id="@+id/image_register_info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="Info_icon"
        android:src="@drawable/info" />

    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/image_register_info"
        android:gravity="center"
        android:text="Esqueceu sua senha!"
        android:textColor="@color/white" />


</RelativeLayout>